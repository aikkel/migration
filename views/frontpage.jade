<link rel="icon" type="image/x-icon" href="https://github.com/andracs/sendnemt.dk/blob/main/sendnemt.png?raw=true">
<title>SendNemt</title>

.container
  .header
    img#logo(src="https://github.com/andracs/sendnemt.dk/blob/main/sendnemt.png?raw=true")
    h1 Formular til pakkeinformation
    link(rel="stylesheet", href="/stylesheets/Styles.css")

  form.parcel-form(action="/insertUser", method="post")
    // Afsenders information
    .section
      h2 Afsenders information
      label(for="senderFirstName") Fornavn:
      input(type="text", id="senderFirstName", name="senderFirstName", required)

      label(for="senderLastName") Efternavn:
      input(type="text", id="senderLastName", name="senderLastName", required)

      label(for="senderEmail") E-mail:
      input(type="email", id="senderEmail", name="senderEmail", required)

      label(for="senderPhone") Telefonnummer:
      input(type="tel", id="senderPhone", name="senderPhone", required)

      label(for="senderAddress") Adresse:
      textarea(id="senderAddress", name="senderAddress", required)

    // Modtagers information
    .section
      h2 Modtagers information
      label(for="receiverFirstName") Fornavn:
      input(type="text", id="receiverFirstName", name="receiverFirstName", required)

      label(for="receiverLastName") Efternavn:
      input(type="text", id="receiverLastName", name="receiverLastName", required)

      label(for="receiverName") Navn:
      input(type="text", id="receiverName", name="receiverName", required)


      label(for="receiverEmail") E-mail:
      input(type="email", id="receiverEmail", name="receiverEmail", required)

      label(for="receiverPhone") Telefonnummer:
      input(type="tel", id="receiverPhone", name="receiverPhone", required)

      label(for="receiverAddress") Adresse:
      textarea(id="receiverAddress", name="receiverAddress", rows=5, required)

    // Pakkeinformation
    .section
      h2 Pakkeinformation
      label(for="parcelWeight") Vægt (kg):
      input(type="number", id="parcelWeight", name="parcelWeight", min="0", step="0.01", required)

      label(for="parcelDimensionLength") Mål (Længde i cm):
      input(type="text", id="parcelDimensionLength", name="parcelDimensionLength", required)

      label(for="parcelDimensionWidth") Mål (Bredde i cm):
      input(type="text", id="parcelDimensionWidth", name="parcelDimensionWidth", required)

      label(for="parcelDimensionHeight") Mål (Højde i cm):
      input(type="text", id="parcelDimensionHeight", name="parcelDimensionHeight", required)

      label(for="parcelContents") Indhold:
      textarea(id="parcelContents", name="parcelContents", rows=5, required)

      label(for="parcelValue") Værdi (kr):
      input(type="number", id="parcelValue", name="parcelValue", min="0", step="0.01", required)

    button(type='submit') Insert User
